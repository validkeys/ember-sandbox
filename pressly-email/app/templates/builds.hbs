<div id="email-wrapper">
  <div class="title-entry">
    {{input type="text" value=emailTitle placeholder="Enter your title"}}
  </div>

  <div id="email-content">
    <div style="max-width: 600px; width: 600px; margin: 0 auto;">
      <h1 style="border-bottom: #000 1px solid; padding-bottom: 5px; font-size: 26px; line-height: 1.3em;">{{emailTitle}}</h1>
    </div>
    {{outlet}}
  </div>
  <div>
    {{textarea value=html}}
    <button {{action "generate"}}>Generate HTML</button>
  </div>
</div>
