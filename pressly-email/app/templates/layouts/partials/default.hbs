<a style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;" class="cover-link" {{bind-attr href=printUrl}} target="_blank"></a>
<table style="width: 100%; padding-bottom: 40px;" {{action "toggle"}}>
  <tr>
    <td class="default-image-container" width="100%" {{bind-attr style=defaultImageCellStyle}}>
    </td>
  </tr>
  <tr>
    <td width="100%;">
      <h2 style="text-align: left; font-weight: bold; line-height: 25px; color: #000; padding: 10px 10px 0 0px; margin: 0; font-size: 19px;">{{article.title}}</h2>
      {{#if article.author_name}}
      <small style="text-align: left;padding: 10px 10px 0 0px;font-size: 13px;font-weight: regular;line-height: 20px;color: #586d7b;" class="byline">by: {{ article.author_name }}</small>
      {{/if}}
    </td>
  </tr>
  <tr>
    <td width="100%;">
      <p style=" font-size: 13px; font-weight: regular; line-height: 20px; color: #586d7b; padding: 10px 10px 0 0;">
        {{description}}
      </p>
    </td>
  </tr>
</table>
