.left-pane
  background: #ddd
  display: table-cell
  vertical-align: top
  height: 100%
  width: 15%
  min-width: 300px

  h1,h2
    font-weight: 100
    font-family: "Helvetica Neue"
    letter-spacing: 1px


  .title-entry
    padding: 10px 0
    margin-bottom: 10px
    border-bottom: #ccc 1px solid
    text-align: center

    input
      width: 90%
      padding: 5px
      border: none
      margin-bottom: 10px


    textarea
      width: 90%
      border: none
      background: #fff
      padding: 5px
      min-height: 100px



  .html-printout
    text-align: center

    button
      background: #159e4a
      border: none
      color: #fff
      padding: 10px 25px
      margin: 10px auto 20px auto

    textarea
      width: 90%
      border: none
      background: #fff
      height: 350px
