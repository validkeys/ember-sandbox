.template-nav
  background: #eee
  text-align: center
  width: 100%
  padding: 30px 0

  h2
    /*display: table-cell*/
    display: inline
    padding: 0
    margin: 0
    font-size: 14px
    color: #aaa
    font-weight: 100
    text-transform: uppercase
    width: 150px


  ul
    padding: 0
    margin: 0
    list-style-type: none
    display: inline


    li
      display: inline


      a
        text-decoration: none
        color: #333
        padding: 10px 20px
        color: #222
        font-size: 12px


        &.active
          border-bottom: #000 2px solid
