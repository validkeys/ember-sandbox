*
  box-sizing:     border-box
  // font-smoothing: antialiased

html, body
  padding:    0
  margin:     0
  width:      100%
  height:     100%
  background: #fff

body
  min-width:    800px
  font-family:  $main-font-family

.full-height
  height: 100%

.scroller
  overflow-x: hidden !important
  overflow-y: scroll !important

.table
  display:  table
  width:    100%

  .table-cell
    display:        table-cell
    vertical-align: middle